<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diameter of Small Pizza:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/smallPizzaDiameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter diameter"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price of Small Pizza:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/smallPizzaPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter price"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diameter of Large Pizza:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/largePizzaDiameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter diameter"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price of Large Pizza:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/largePizzaPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter price"
                android:inputType="numberDecimal"/>

            <ImageView
                android:id="@+id/coolImage"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:rotation="0"
                android:rotationX="25"
                android:color="@color/awesome"
                android:src="@drawable/super_pizza" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:textSize="33sp"
        android:layout_gravity="center"
        android:text="Calculate"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33sp"
        android:layout_marginTop="16dp"
        android:text="Cost per square inch will be displayed here."/>

</LinearLayout>
